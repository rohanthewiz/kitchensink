// Menu
@require _globals

menu()
  #top_menu
    position: absolute
    top: 0
    left: 0
    right: 0
    text-align Left
    color: lightgray
    background-color #303030
    padding: 3px 5px
    margin-bottom: 0.7em
    a
      text-decoration none
      color: beige
      a:hover, a:visited
        color: white
      &:hover
        text-decoration underline
